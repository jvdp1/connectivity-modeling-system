# Makefile

NETINC=/usr/lib64/gfortran/modules
NETLIB=/usr/lib64

#the Fortran compiler to create object files
FC            = gfortran
#the Fortran flags to create object files
FCFLAGS      = -I$(NETINC) -I/usr/local/include -cpp
#the C-compiler to create object files
CC            = gcc
#the C flags to create object files
CCFLAGS       = -O 

#the Fortran compiler to create executable
LD            = $(FC)
#the Fortran flags to create executable
LDFLAGS       = -L$(NETLIB) -L/usr/local/lib -lnetcdf -lnetcdff -lcurl -lm
EXTRALIBS     = -L$(NETLIB) -lnetcdf -lhdf5_hl -lhdf5 -lsz -lz -ldl -lm -lcurl

# Rules

.c.o:
	$(CC) -c $*.c $(CCFLAGS) 

.f90.o:
	$(FC) -c $*.f90 $(FCFLAGS) 

.f.o:
	$(FC) -c $*.f $(FCFLAGS) 


